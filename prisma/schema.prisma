generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  age      Int
  gender   String
  password String
  // Relations
  medicalRecords MedicalRecord[]
  prescriptions  Prescription[]
  appointments   Appointment[]
  medicineAdherences MedicineAdherence[]
  healthMetrics  HealthMetrics[]
}

model MedicalRecord {
  id         String  @id @default(uuid())
  patientId  Int
  patient    Patient @relation(fields: [patientId], references: [id])
  diagnosis  String
  medication String
  createdAt  DateTime @default(now())
}

model Doctor {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  specialization String
  password       String
  // Relations
  prescriptions  Prescription[]
  appointments   Appointment[]
}

model Prescription {
  id         String  @id @default(uuid())
  doctorId   String
  doctor     Doctor  @relation(fields: [doctorId], references: [id])
  patientId  Int
  patient    Patient @relation(fields: [patientId], references: [id])
  medications String
  dateIssued  DateTime @default(now())
}

model Appointment {
  id              String   @id @default(uuid())
  patientId       Int
  patient         Patient  @relation(fields: [patientId], references: [id])
  doctorId        String
  doctor          Doctor   @relation(fields: [doctorId], references: [id])
  appointmentDate DateTime
  status          String
}

model MedicineAdherence {
  id            String  @id @default(uuid())
  patientId     Int
  patient       Patient @relation(fields: [patientId], references: [id])
  medication    String
  adherenceStatus String  // Example: "Taken", "Missed"
  missedDoses   Int
  reminderSent  Boolean @default(false)  // âœ… Tracks if an alert was sent
}

model HealthMetrics {
  id          String  @id @default(uuid())
  patientId   Int
  patient     Patient @relation(fields: [patientId], references: [id])
  metricName  String
  metricValue Float
  recordedAt  DateTime @default(now())
}
